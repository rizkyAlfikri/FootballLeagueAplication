<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/txt_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/match_events"
        android:textColor="@color/primary_text"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        style="@style/AppTheme.view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_match" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_formations_home"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:textAlignment="viewStart"
            android:textStyle="normal"
            tools:text="4-3-3" />

        <TextView
            android:id="@+id/txt_formations_away"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:textStyle="normal"
            tools:text="5-3-2" />

        <TextView
            android:id="@+id/text_formation"
            style="@style/AppTheme.TextDetailMatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/formations"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        style="@style/AppTheme.view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_shoot_home"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:textAlignment="viewStart"
            android:textStyle="normal"
            tools:text="10" />

        <TextView
            android:id="@+id/txt_shoot_away"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:textStyle="normal"
            tools:text="7" />

        <TextView
            android:id="@+id/text_shoot"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/shoots"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        style="@style/AppTheme.view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_red_home"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:textStyle="normal"
            tools:text="69': Martin Skrtel" />

        <TextView
            android:id="@+id/txt_red_away"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:textStyle="normal"
            tools:text="54': Jordan Henderson\n asdasdasd\n asdasdasdasdasdasd\n" />

        <TextView
            android:id="@+id/text_redcard"
            style="@style/AppTheme.TextDetailMatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/red_cards"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view4"
        style="@style/AppTheme.view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_yellow_home"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:textAlignment="viewStart"
            android:textStyle="normal"
            android:layout_alignParentStart="true"
            tools:text="49': Martin Skrtel" />

        <TextView
            android:id="@+id/txt_yellow_away"
            style="@style/AppTheme.TextDetailMatch.Team"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:textStyle="normal"
            tools:text="49': Martin Skrtel\n asdasdasd\n asasdadas\n asdasdasd" />

        <TextView
            android:id="@+id/text_yellowcard"
            style="@style/AppTheme.TextDetailMatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/yellow_cards"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        style="@style/AppTheme.view"/>

</LinearLayout>


