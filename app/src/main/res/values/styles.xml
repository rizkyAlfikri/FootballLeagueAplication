<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgapps</item>
        <item name="colorPrimaryDark">@color/bgapps</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="editTextColor">@android:color/white</item>-->
        <!--<item name="android:textColorHint">@android:color/white</item>-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="editTextBackground">@android:color/white</item>
        <!--<item name="searchViewStyle">@android:color/black</item>-->
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.expand" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TextDetailMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextDetailMatch.Team" >
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">16dp</item>

    </style>

    <style name="AppTheme.view" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>


</resources>
