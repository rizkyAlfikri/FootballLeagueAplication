<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dicoding.picodiploma.footballleagueaplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".features.searchteams.SearchTeamsActivity" />
        <activity android:name=".features.playerdetail.PlayerDetailActivity" />
        <activity android:name=".features.teamDetail.TeamDetailActivity" />
        <activity android:name=".features.searchMatch.SearchMatchActivity" />
        <activity
            android:name=".features.detailMatch.DetailMatchActivity"
            android:label="@string/title_activity_detail_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainLeagueActivity"
            android:label="@string/title_activity_main_league" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>